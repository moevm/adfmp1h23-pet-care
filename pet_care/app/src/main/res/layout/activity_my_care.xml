<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCareActivity">

    <ImageButton
        android:id="@+id/settings2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="showDialog"
        app:layout_constraintStart_toEndOf="@+id/searchView"
        app:layout_constraintTop_toTopOf="@+id/searchView"
        app:srcCompat="@drawable/setings"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imgBack2"
        android:layout_width="310dp"
        android:layout_height="356dp"
        android:alpha="0.20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/addPet"
        android:layout_width="260dp"
        android:layout_height="58dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/asap_bold"
        android:onClick="movePage"
        android:text="Добавить подопечного"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/return_entry2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@android:string/no"
        android:onClick="clickReturn"
        android:paddingStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/view5"
        android:layout_width="368dp"
        android:layout_height="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:background="#EBEBEB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petCare" />

    <TextView
        android:id="@+id/petAge"
        android:layout_width="264dp"
        android:layout_height="31dp"
        android:layout_marginStart="10dp"
        android:text="Возраст: 4 года"
        android:textColor="@color/darck_blue"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/petIcon"
        app:layout_constraintTop_toBottomOf="@+id/petName" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleMyCare" />

    <TextView
        android:id="@+id/petName"
        android:layout_width="264dp"
        android:layout_height="31dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Дикобраз Жора"
        android:textColor="@color/darck_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/petIcon"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <TextView
        android:id="@+id/titleMyCare"
        android:layout_width="216dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/asap_bold"
        android:text="Моя опека"
        android:textAlignment="center"
        android:textColor="@color/darck_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/petIcon"
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:srcCompat="@drawable/pet_icon" />

    <TextView
        android:id="@+id/petCare"
        android:layout_width="264dp"
        android:layout_height="31dp"
        android:layout_marginStart="10dp"
        android:text="Опека до 25.07.2023"
        android:textColor="@color/darck_blue"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/petIcon"
        app:layout_constraintTop_toBottomOf="@+id/petAge" />

    <TextView
        android:id="@+id/go_to4"
        android:layout_width="372dp"
        android:layout_height="103dp"
        android:contentDescription="@android:string/no"
        android:onClick="goToPetProfile"
        app:layout_constraintBottom_toBottomOf="@+id/petCare"
        app:layout_constraintEnd_toEndOf="@+id/petAge"
        app:layout_constraintStart_toStartOf="@+id/petIcon"
        app:layout_constraintTop_toTopOf="@+id/petName" />

    <ImageButton
        android:id="@+id/butShare"
        android:layout_width="76dp"
        android:layout_height="67dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@android:string/no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/petName"
        app:srcCompat="@drawable/share_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>